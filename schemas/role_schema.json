{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Role Schema",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "description": { "type": "string" },
    "imports": {
      "type": "object",
      "properties": {
        "prompts": { "type": "array", "items": { "type": "string" } },
        "rules": { "type": "array", "items": { "type": "string" } },
        "tools": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["prompts", "rules", "tools"]
    }
  },
  "required": ["name", "version", "description", "imports"]
}
