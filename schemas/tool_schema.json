{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tool Schema",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "execution_policy": {
      "type": "object",
      "properties": {
        "default_mode": { "type": "string" },
        "allowed_modes": { "type": "array", "items": { "type": "string" } }
      }
    },
    "execution_environment": {
      "type": "object",
      "properties": {
        "type": { "type": "string" }
      }
    }
  },
  "required": ["name", "description"]
}
